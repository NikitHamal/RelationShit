<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/empty_agents_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:visibility="gone">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/icon_smart_toy_round"
        app:tint="@color/md_theme_onSurfaceVariant"
        android:contentDescription="No Agents Icon"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No AI Agents Yet"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        android:textColor="@color/md_theme_onSurface"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an agent to start conversations with different AI personalities."
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="@color/md_theme_onSurfaceVariant"
        android:gravity="center" />

</LinearLayout>